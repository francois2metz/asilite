        <% date = Timex.parse!(comment["created_at"], "{ISO:Extended}") %>
        <time datetime="<%= comment["created_at"] %>"><%= Timex.format!(date, "{D} {Mfull} {YYYY} Ã  {h24}:{m}") %></time>
